{
    "configurations": [
        {
            "name": "Python: Uvicorn (Dev Mode)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host", "0.0.0.0",
                "--port", "8080",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/code/src",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/code/src"
            }
        }
    ]
}
